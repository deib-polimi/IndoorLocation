<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="it.polimi.surround.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/ref_distance"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="numberSigned"
            android:text="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_exp"
                android:onClick="startExperiment" />
            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stop_exp"
                android:onClick="stopExperiment" />
        </LinearLayout>

        <TextView android:id="@+id/lat_lng" android:text="@string/lat_lng" android:layout_width="match_parent"
            android:layout_height="50px" />

        <TextView android:id="@+id/lat_lng_val" android:layout_width="match_parent"
            android:layout_height="100px" />

        <TextView android:id="@+id/rssi" android:text="@string/rssi" android:layout_width="match_parent"
            android:layout_height="50px" />

        <TextView android:id="@+id/rssi_val" android:layout_width="match_parent"
            android:layout_height="112dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <View
                android:id="@+id/G00"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/rectangle">
            </View>
            <View
                android:id="@+id/G01"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/rectangle"
                android:onClick="setPosition">
            </View>
            <View
                android:id="@+id/G02"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/rectangle"
                android:onClick="setPosition">
            </View>
            <View
                android:id="@+id/G03"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/rectangle">
            </View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <View
                android:id="@+id/G10"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/rectangle">
            </View>
            <View
                android:id="@+id/G11"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/rectangle"
                android:onClick="setPosition">
            </View>
            <View
                android:id="@+id/G12"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/rectangle"
                android:onClick="setPosition">
            </View>
            <View
                android:id="@+id/G13"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/rectangle">
            </View>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
